@model IEnumerable<HRMS.Core.Entities.LeadManagement.CustomerDetail>

@{
    ViewData["Title"] = "Customer List";
}

<div class="vd_content-wrapper">
    <div class="vd_container">
        <div class="vd_content clearfix">
            <div class="vd_head-section clearfix">
                <div class="vd_panel-header">
                    <ul class="breadcrumb">
                        <li><a href="/">Home</a> </li>
                        <li><a href="#">Master</a> </li>
                        <li class="active">Customer List</li>
                    </ul>
                </div>
            </div>
            <div class="vd_title-section clearfix">
                <div class="vd_panel-header">
                    <h1>Customer List</h1>
                </div>
            </div>
            <div class="vd_content-section clearfix">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel widget">
                            <div class="panel-heading vd_bg-green">
                                <h3 class="panel-title"> <span class="menu-icon"> <i class="fa fa-table"></i> </span> Customer List</h3>
                            </div>
                            <div class="panel-body table-responsive">
                                <table class="table table-striped" id="data-tables">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>CustomerName</th>
                                            <th>Address</th>
                                            <th>Phone</th>
                                            <th>Email</th>
                                            <th>Description</th>
                                            <th>Assign Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
                                        {
                                        <tr>
                                            <td>@item.Index</td>
                                            <td>
                                                <a asp-action="GetCustomerDetail" 
                                                   asp-route-custId="@item.Data.Id"
                                                   asp-controller="CustomerDetail">@item.Data.CustomerName</a>
                                            </td>
                                            <td>@item.Data.Address</td>
                                            <td>@item.Data.Phone</td>
                                            <td>@item.Data.Email</td>
                                            <td>@item.Data.Description</td>
                                            <td>@item.Data.AssignDate</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- Panel Widget -->
                    </div>
                    <!-- col-md-12 -->
                </div>
                <!-- row -->

            </div>
            <!-- .vd_content-section -->

        </div>
        <!-- .vd_content -->
    </div>
    <!-- .vd_container -->
</div>